@{
    ViewData["Title"] = "Home Page";
}

<style>
.topbar{
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:18px;
  padding:22px 28px;
  background:#fff;
  width: 100vw;
  margin-left: calc(50% - 50vw);
}

.left-group{
  display:flex;
  align-items:center;
  gap:14px;
  flex:1;
}

.search-form{
  width: clamp(420px, 60vw, 900px);
  display:flex;
}

.search-input{
  width:100%;
  padding:16px 18px;
  font-size: 18px;
  border:2px solid #111;
  border-radius:999px;
  outline:none;
}

.topbar-actions{
  display:flex;
  align-items:center;
  gap:10px;
}

.logo{
  height:70px;
  width:auto;
  display:block;
}

.topbar-actions .btn{
  font-size: 18px;
  padding: 14px 22px;
  border-radius: 14px;
  line-height: 1;
  text-decoration: none;
  display: inline-block;
}

.topbar-actions .btn-dark{
  background:#14133b;
  color:#fff;
  border:1px solid #14133b;
}

.topbar-actions .btn-outline{
  background:#fff;
  color:#111;
  border:2px solid #111;
}

.category-nav{
  display:flex;
  gap:24px;
  padding:10px 24px;
  background:#14133b;

  width: 100vw;
  margin-left: calc(50% - 50vw);
  border-top:1px solid #eee;
}

.category-nav a{
  text-decoration:none;
  color:#ffffff;
  font-weight:700;
  font-size: 24px;
}

.category-nav a.lease-link{
  color: #ffce21;
}

.split-hero{
  display:grid;
  grid-template-columns: 1fr 1fr;
  min-height: 60vh;
  width: 100vw;
  margin-left: calc(50% - 50vw);
}

.hero-card{
  position:relative;
  display:block;
  background-size: cover;
  background-position:center;
}

.hero-overlay{
  position:absolute;
  inset:0;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  gap:14px;
  z-index: 2;
}

.hero-overlay h2{
  color:#fff;
  font-size:64px;
  font-weight:800;
  margin:0;
  text-shadow:0 2px 12px rgba(0,0,0,.35);
}


.hero-btn{
  display:inline-block;
  background:#fff;
  color:#111;
  padding:10px 16px;
  border-radius:10px;
  font-weight:700;
  text-decoration:none;

  position: relative;
  z-index: 3;
  cursor:pointer;
}

.hero-btn:hover{
  opacity: .92;
}

.hero-item{
  background-image: linear-gradient(rgba(0,0,0,.15), rgba(0,0,0,.15)),
    url("/images/MarketImage.jpg");
}

.hero-lease{
  background-image: linear-gradient(rgba(0,0,0,.15), rgba(0,0,0,.15)),
    url("/images/LeaseImage.jpg");
}

/* IMPORTANT: allow ONLY the Shop button to receive clicks */
.hero-overlay{
  pointer-events: none;
}

.hero-btn{
  pointer-events: auto;
  position: relative;
  z-index: 10;
  cursor: pointer;
}
</style>


<header class="topbar">
    <div class="left-group">
        <a class="logo-link" asp-controller="Home" asp-action="Index">
            <img src="~/images/logo.png" alt="ETSU Marketplace" class="logo" />
        </a>

        <form class="search-form" action="#" method="get">
            <input class="search-input" type="search" name="q" placeholder="Search" />
        </form>
    </div>

    <div class="topbar-actions">

        <a class="btn btn-dark" href="/Listings/Items">Sell</a>

        <a class="btn btn-outline" asp-area="Identity" asp-page="/Account/Login">Log in</a>
    </div>
</header>

<nav class="category-nav">
    <a href="/Listings/Items?category=Textbook">Textbook</a>
    <a href="/Listings/Items?category=Clothing">Clothing</a>
    <a href="/Listings/Items?category=Vehicles">Vehicles</a>
    <a href="/Listings/Items?category=Gaming">Gaming</a>
    <a href="/Listings/Items?category=Accessories">Accessories</a>
    <a href="/Listings/Items?category=Furniture">Furniture</a>
    <a href="/Listings/Items?category=Home">Home</a>
    <a href="/Listings/Leases" class="lease-link">Lease</a>
</nav>

<section class="split-hero">
    <div class="hero-card hero-item">
        <div class="hero-overlay">
            <h2>Item</h2>
            <a class="hero-btn" href="/Listings/Items">Shop</a>
        </div>
    </div>

    <div class="hero-card hero-lease">
        <div class="hero-overlay">
            <h2>Lease</h2>
            <a class="hero-btn" href="/Listings/Leases">Shop</a>
        </div>
    </div>
</section>
