@{
    ViewData["Title"] = "Home Page";
}
<style>

.topbar{
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:18px;
  padding:22px 28px;
  background:#fff;
  width: 100vw;
  margin-left: calc(50% - 50vw);
}

.left-group{
  display:flex;
  align-items:center;
  gap:14px;
  flex:1;
}

.search-form{
  width: clamp(420px, 60vw, 900px);
  display:flex;
}

.search-input{
  width:100%;
  padding:16px 18px;
  font-size: 18px;
  border:2px solid #111;
  border-radius:999px;
  outline:none;
}

.topbar-actions{
  display:flex;
  align-items:center;
  gap:10px;
}

.logo{
  height:70px;
  width:auto;
  display:block;
}

.topbar-actions .btn{
  font-size: 18px;
  padding: 14px 22px;
  border-radius: 14px;
  line-height: 1;
}

.topbar-actions .btn-dark{
  background:#14133b;
  color:#fff;
  border:1px solid #14133b;
}

.topbar-actions .btn-outline{
  background:#fff;
  color:#111;
  border:2px solid #111;
}


.category-nav{
  display:flex;
  gap:24px;
  padding:10px 24px;
  background:#14133b;

  width: 100vw;
  margin-left: calc(50% - 50vw);
  border-top:1px solid #eee;
}

.category-nav a{
  text-decoration:none;
  color:#ffffff;
  font-weight:700;
  font-size: 24px; 
}

.category-nav a.lease-link{
  color: #ffce21;
}

.split-hero{
  display:grid;
  grid-template-columns: 1fr 1fr;
  min-height: 60vh;
  width: 100vw;
  margin-left: calc(50% - 50vw);
}

.hero-card{
  position:relative;
  display:block;
  background-size: cover;
  background-position:center;
  text-decoration:none; /* removes blue underline */
}

.hero-overlay{
  position:absolute;
  inset:0;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  gap:14px;
}

.hero-overlay h2{
  color:#fff;
  font-size:64px;
  font-weight:800;
  margin:0;
  text-shadow:0 2px 12px rgba(0,0,0,.35);
}

.hero-btn{
  background:#fff;
  color:#111;
  padding:10px 16px;
  border-radius:10px;
  font-weight:700;
}

.hero-item{
  background-image: linear-gradient(rgba(0,0,0,.15), rgba(0,0,0,.15)),
    url("/images/MarketImage.jpg");
}

.hero-lease{
  background-image: linear-gradient(rgba(0,0,0,.15), rgba(0,0,0,.15)),
    url("/images/LeaseImage.jpg");
}
</style>

<header class="topbar">
    <div class="left-group">
        <a class="logo-link" asp-controller="Home" asp-action="Index">
            <img src="~/images/logo.png" alt="ETSU Marketplace" class="logo" />
        </a>

        <form class="search-form" action="#" method="get">
            <input class="search-input" type="search" name="q" placeholder="Search" />
        </form>
    </div>

    <div class="topbar-actions">
        <a class="btn btn-dark" href="#">Sell</a>
        <a class="btn btn-outline" href="#">Log in</a>
    </div>
</header>

<nav class="category-nav">
    <a href="#">Textbook</a>
    <a href="#">Clothing</a>
    <a href="#">Vehicles</a>
    <a href="#">Gaming</a>
    <a href="#">Accessories</a>
    <a href="#">Furniture</a>
    <a href="#">Home</a>
    <a href="#" class="lease-link">Lease</a>
</nav>

<section class="split-hero">
    <a class="hero-card hero-item" href="#">
        <div class="hero-overlay">
            <h2>Item</h2>
            <span class="hero-btn">Shop</span>
        </div>
    </a>

    <a class="hero-card hero-lease" href="#">
        <div class="hero-overlay">
            <h2>Lease</h2>
            <span class="hero-btn">Shop</span>
        </div>
    </a>
</section>