@model ETSU_Marketplace.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Manage Leases";
}

<section class="listings-wrap">
    <a class="back-link" asp-controller="Home" asp-action="Index">‚Üê Back to Home</a>

    <div class="d-flex justify-content-between align-items-center">
        <h1 class="page-title mb-0">Lease Takeovers</h1>

        <a class="btn btn-dark fw-bold"    asp-controller="LeaseListings"   asp-action="Create">
            + Create Listing
        </a>
    </div>
    <h3 class="section-subtitle">Latest Listings</h3>

    <div class="listings-row">
        @if (Model?.LatestLeaseListings != null && Model.LatestLeaseListings.Any())
        {
            foreach (var listing in Model.LatestLeaseListings)
            {
                @await Html.PartialAsync("_ListingCard", listing)
            }
        }
        else
        {
            <div class="empty-state">No lease takeover listings yet.</div>
        }
    </div>
</section>