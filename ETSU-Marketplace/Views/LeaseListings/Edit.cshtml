@model LeaseListing

@{
    ViewData["Title"] = "Edit Lease";
}

<div class="container mt-4">
    <h1 class="fw-bold">Edit Lease Listing</h1>
    <p class="text-muted">Update the property details for "@Model.Title"</p>
    <hr />

    <div class="row">
        <div class="col-md-8 col-lg-6">
            <form action="/api/LeaseAPI/update" method="post" class="shadow-sm p-4 border rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @* Hidden fields for system data *@
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold"></label>
                    <input asp-for="Address" class="form-control" placeholder="123 Maple St, Johnson City, TN" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="row align-items-center">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label fw-bold">Monthly Rent</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark text-white">$</span>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-check mt-4">
                            <input class="form-check-input" asp-for="UtilitiesIncluded" />
                            <label class="form-check-label fw-bold" asp-for="UtilitiesIncluded">
                                Utilities Included?
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="LeaseStart" class="form-label fw-bold">Available From</label>
                        <input asp-for="LeaseStart" class="form-control" type="date" />
                        <span asp-validation-for="LeaseStart" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="LeaseEnd" class="form-label fw-bold">Lease Ends</label>
                        <input asp-for="LeaseEnd" class="form-control" type="date" />
                        <span asp-validation-for="LeaseEnd" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mt-4 pt-2 border-top">
                    <button type="submit" class="btn btn-dark px-4 fw-bold">Save Changes</button>
                    @* Adjusted cancel link to your management page *@
                    <a href="/Listings/Leases" class="btn btn-outline-secondary px-4 ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>